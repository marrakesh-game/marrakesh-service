{
  "name": "marrakesh-service",
  "version": "0.0.1",
  "description": "Backend for the Marrakesh Game",
  "main": "dist/server.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint",
    "serve": "node -r dotenv/config dist/server.js",
    "watch-node": "nodemon -r dotenv/config dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint.fix": "standardx --fix",
    "lint": "tsc --noEmit && standardx",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon -r dotenv/config --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "security.test": "./node_modules/.bin/snyk test",
    "docker.security.test": "./node_modules/.bin/snyk test",
    "docker.run": "docker run -ti --rm=true --init -p 3000:3000 koenighotze/marrakesh-service",
    "docker.run.debug": "docker run -ti --rm=true --init -p 3000:3000 -p 9229:9229 koenighotze/marrakesh-service node --inspect=0.0.0.0 ./app/server.js",
    "docker.lint": "docker run --rm -i hadolint/hadolint < Dockerfile",
    "circleci.validate": "circleci config validate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marrakesh-game/marrakesh-service.git"
  },
  "keywords": [
    "typescript",
    "node",
    "expressjs"
  ],
  "author": "David Schmitz <koenighotze@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marrakesh-game/marrakesh-service/issues"
  },
  "homepage": "https://github.com/marrakesh-game/marrakesh-service#readme",
  "dependencies": {
    "@godaddy/terminus": "^4.3.1",
    "ajv": "^6.10.2",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "compression": "^1.7.4",
    "config": "^3.2.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "joi": "^14.3.1",
    "mongodb": "^3.4.1",
    "serve-static": "^1.14.1",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/bunyan": "^1.8.6",
    "@types/compression": "^1.0.1",
    "@types/config": "0.0.36",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.25",
    "@types/joi": "^14.3.4",
    "@types/mongodb": "^3.3.14",
    "@types/node": "^13.1.4",
    "@types/serve-static": "^1.13.3",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.6",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "concurrently": "^5.0.2",
    "eslint": "^6.8.0",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "ntl": "^5.0.0",
    "pre-commit": "^1.2.2",
    "snyk": "^1.274.0",
    "standardx": "^5.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "ignore": [
      "dist/",
      "node_modules/"
    ]
  },
  "pre-commit": [
    "test",
    "lint",
    "docker.lint"
  ]
}
